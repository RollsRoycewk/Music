.recommend-container .scroll-container {
  display: flex;
  padding: 20rpx 0;
  height: 300rpx;
}

.scroll-container .scroll-item {
  margin-right: 20rpx;
}

.recommend-container .scroll-container image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10px;
}

.recommend-container .scroll-container text {
  /* height:80rpx; */
  display: -webkit-box;
  /* 文本行排列方向 */
  -webkit-box-orient: vertical;
  /* 设置几行之后出现溢出省略号 */
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 排行榜 */

.ranking-container {
