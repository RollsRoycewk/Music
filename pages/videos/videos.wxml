<!--pages/videos/videos.wxml-->
<!-- 头部 -->
<view class="header-container">
  <image src="/static/images/video/video.jpg"></image>
  <input placeholder="光辉岁月" placeholder-class="placeholderStyle"></input>
  <image src="/static/images/logo.png"></image>
</view>

<!-- nav -->
<scroll-view class="nav-container" enable-flex scroll-x bindtap="handleTap">
  <view class="nav-item {{ currentid === item.id ? 'active' : ''}}" wx:for="{{navList}}" wx:key="id" data-currentId="{{item.id}}">{{item.name}} </view>
</scroll-view>